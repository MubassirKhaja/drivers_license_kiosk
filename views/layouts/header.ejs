<head>
    <meta charset="utf-8">
    <title>Driver's License</title>

        <style>
        html{box-sizing:border-box}
        body{font-family:"proxima-nova",sans-serif}h1,h2,h3,h4,h5,h6,p,ul,li,body,html,form,fieldset{margin:0;padding:0;outline:0;font-weight:normal;border:0}*,*::before,*::after{-webkit-box-sizing:inherit;box-sizing:inherit}*{margin:0;padding:0}button{font-family:inherit}
        
        #header{position:relative;width:100%;min-height:65px;background:#ffecd1;z-index:10000}
        
        #header .container{width:100%;min-width:0;max-width:none;padding:0 30px 0 20px !important}
        

        
        #header #nav
            {
                list-style:none;
                margin:0;
                padding:0;
                float:right;
                margin-top:9px;
                text-align:center
            }
        #header #nav li
            {
                float:left;
                -webkit-border-radius:2px;
                -moz-border-radius:2px;
                border-radius:2px}
        
        #header #nav>li>a
            {
                width:auto;
                padding:0 10px 0 7px;
                color:#fff;
                font-size:14px;
                line-height:28px;
                border:1px solid transparent;
                border-radius:5px;
                height:30px;
                margin-top:5px;
                opacity:1;
                display:inline-block;
                font-weight:bold;
                text-decoration:none}
    </style>
    <style>      
        button {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #333;
            color: #fff;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #111;
        }
      </style>
 </head>

 <header id="header">
    <div class="container clearfix">
             <span id="menu_inner">
                <ul id="nav">
                    <% if(!loggedIn) { %>
                        <li><a href="dashboard"><button>Dashboard</button></a></li>
                        <li><a href="login"><button>Login</button></a></li>
                    <% } %>


                    <% if(loggedIn) { %>
                        <% if(userType == 'Driver') { %>
                            <li><a href="dashboard"><button>Dashboard</button></a></li>
                            <li><a href="license_g"><button>G</button></a></li>
                            <li><a href="license_g2"><button>G2</button></a></li>
                            <li><a href="logout"><button>Logout</button></a></li>
                        <% } %>
                        <% if(userType == 'Admin') { %>
                            <li><a href="dashboard"><button>Dashboard</button></a></li>
                            <li><a href="appointments"><button>Appointments</button></a></li>
                            <li><a href="drivers_results"><button>Drivers Results</button></a></li>
                            <!-- <li><a href="license_g"><button>G</button></a></li>
                            <li><a href="license_g2"><button>G2</button></a></li> -->
                            <li><a href="logout"><button>Logout</button></a></li>
                        <% } %>
                        <% if(userType == 'Examiner') { %>
                            <li><a href="dashboard"><button>Dashboard</button></a></li>
                            <li><a href="examiner"><button>Examiner</button></a></li>
                            <!-- <li><a href="license_g"><button>G</button></a></li>
                            <li><a href="license_g2"><button>G2</button></a></li> -->
                            <li><a href="logout"><button>Logout</button></a></li>
                        <% } %>


                    <% } %>
                </ul>
             </span>
    </div>
 </header>  